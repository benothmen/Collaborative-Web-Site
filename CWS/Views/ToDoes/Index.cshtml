@model IEnumerable<CWS.Models.ToDo>

@{
    ViewData["Title"] = "To Do";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-left: 20px;">
    <div class="col-lg-12">
        <div class="au-card au-card--no-shadow au-card--no-pad m-b-40">
            <div class="au-card-title" style="background-image:url('images/bg-title-01.jpg');">
                <div class="bg-overlay bg-overlay--blue"></div>
                <h3>
                    <i class="zmdi zmdi-format-list-bulleted"></i>To Do
                </h3>
                <button class="au-btn-plus">
                    <a asp-action="Create" class="zmdi zmdi-plus"></a>
                </button>
            </div>
            <div class="au-task js-list-load">
                <div class="au-task__title">
                    <p>Tasks xxxxxxxxxxxxxxxxxxxxxx</p>
                </div>
                <div class="au-task-list js-scrollbar3">
                    @foreach (var item in Model)
                    {
                        <div class="au-task__item au-task__item--danger">
                            <div class="au-task__item-inner">
                                <h5 class="task">
                                    @Html.DisplayFor(modelItem => item.TasKContent)
                                </h5>
                                <span class="time">Html.DisplayFor(modelItem => item.TaskDateTime)</span>
                            </div>
                        </div>
                    }
                </div>
                <div class="au-task__footer">
                    <button class="au-btn au-btn-load js-load-btn">load more</button>
                </div>
            </div>
        </div>
    </div>
</div>
